<%- include('includes/head.ejs') %>
<%- include('includes/topbar.ejs') %>
<%- include('includes/sidebar.ejs') %>
<body>

<div class="col py-3">
  <div height class="container">
    <h1 class="display-4"><center>Homepage</center></h1>
    <br>
    <br>
    <h1 class="display-6">Banner de Noticias</h1>
    <div  id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
    <% if (noticia.length > 0) { %>
      <% for (let noticia1 of noticia) { %>
      <li data-target="#carouselExampleIndicators" data-slide-to="<%= noticia1.id_noticia %>" class="active"></li>
      <% } %>
    <% } %>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="d-block w-100" src="https://i.ibb.co/9yk4DH7/image.png" alt="First slide">
      </div>
      <% if (noticia.length > 0) { %>
        <% for (let noticia2 of noticia) { %>
      <div class="carousel-item">
        <img class="d-block w-100" src="<%= noticia2.url_imagen_noticia %>" alt="First slide">
      </div>
      <% } %>
    <% } %>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>
</div>
<%- include('includes/foot.ejs') %>
